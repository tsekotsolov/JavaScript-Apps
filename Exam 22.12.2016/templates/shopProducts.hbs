        {{>errorpartial}}
        <section id="viewShop">
            <h1>Products</h1>
            <div class="products" id="shopProducts">
                <table>
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                      {{#each data}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{description}}</td>
                            <td>{{price}}</td>
                            <td><button data-id="{{_id}}" onclick="purchaseItem(event)">Purchase</button></td>
                        </tr>
                    </tbody>
                    {{/each}}
                </table>
            </div>
        </section>