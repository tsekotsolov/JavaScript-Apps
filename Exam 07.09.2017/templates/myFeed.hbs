 {{>headerpartial}} {{>menupartial}}
<section id="viewMe">
    <div class="content">
        <div class="chirper">

            <h2 class="titlebar">{{user}}</h2>

            <form id="formSubmitChirpMy" class="chirp-form">
                <textarea name="text" class="chirp-input"></textarea>
                <input class="chirp-submit" id="btnSubmitChirpMy" value="Chirp" type="submit">
            </form>

            <div id="myStats" class="user-details">
                <span>0 chirps</span> |
                <span>1 following</span> |
                <span>0 followers</span>
            </div>
        </div>

        <div id="myChirps" class="chirps">

            <h2 class="titlebar">Chirps</h2>

            {{#if hasChirps}}
            <div class="chirp">
                <span class="loading">No chirps in database</span>
            </div>

            {{else}} {{#each chirpsResponse}}
            <article class="chirp">
                <div class="titlebar">
                    <a href="#" class="chirp-author">delete</a>
                    <span class="chirp-time">{{date}}</span>
                </div>
                <p>{{text}}</p>
            </article>
            {{/each}} 
            {{/if}}

        </div>

    </div>
</section>
{{>footerpartial}}