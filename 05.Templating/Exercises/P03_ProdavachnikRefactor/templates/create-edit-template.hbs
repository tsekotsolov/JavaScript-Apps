<section id="{{sectionType}}" class="{{sectionType}}">
  <h1 class="titleForm">{{headline}}</h1>
  <form id="{{formId}}" class="form">
    <div>Title:</div>
    <div>
      <input type="text" name="title" id="title" required />
    </div>
    <div>Description:</div>
    <div>
      <textarea name="description" rows="10" id="description" required></textarea>
    </div>
    <div>Date Published:</div>
    <div>
      <input type="date" name="datePublished" id="date"required />
    </div>
    <div>Price:</div>
    <div>
      <input type="number" step="0.01" name="price" id="price"required />
    </div>
    <div>
      <input type="button" id="{{buttonId}}" value="{{buttonText}}" onclick="{{functionToExec}}" />
    </div>
    <div>
      <input type="text" id="id" hidden/>
    </div>
    
  </form>
</section>