
{{>boxespartial}}
<section id="viewSendMessage">
  <h1>Send Message</h1>
  <form id="formSendMessage">
    <div>Recipient:</div>
    <div>
      <select name="recipient" required id="msgRecipientUsername">
        {{#each data}}
        <option value="{{username}}">({{username}}){{name}}</option>
        {{/each}}
      </select>
    </div>
    <div>Message Text:</div>
    <div>
      <input type="text" name="text" required id="msgText" />
    </div>
    <div>
      <input type="submit" value="Send" onclick="sendMessageToDataBase(event)"/>
    </div>
  </form>
</section>